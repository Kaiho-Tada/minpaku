<h1>ユーザー編集</h1>
<%= render 'shared/error_form', {model: @user} %>
<%= form_with model: @user, local: true do |f| %>
    <table class="user_table">
      <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :email ,"Eメール" %></th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th><%= f.label :password ,"パスワード" %></th>
        <td><%= f.text_field :password %></td>
      </tr>
      <tr>
        <th><%= f.label :introduction ,"自己紹介" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
          <% if @user.avatar.url %>
            <th><%= f.label :avatar, "アイコンを編集する" %></th>
            <td><%= f.file_field :avatar %></td>            
          <% else %>
            <th><%= f.label :avatar, "アイコンを編集する" %></th>
            <td><%= f.file_field :avatar %></td>
          <% end %>
        </th>
      </tr>
      <tr><td colspan="2"><%= f.submit "編集を完了する"%></td></tr>
      <tr><td colspan="2"><%= link_to root_path %></td></tr>
    </table>
<% end %>